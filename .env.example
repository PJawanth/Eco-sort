# ===========================================
# EcoSort-AI Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# ----- Google Gemini API -----
# Get your API key from: https://ai.google.dev/
GOOGLE_API_KEY=

# ----- Azure Configuration (Optional for local dev) -----
# Azure Key Vault URL for production secrets
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Tenant ID for authentication
AZURE_TENANT_ID=your_tenant_id

# Azure Client ID (for service principal auth)
AZURE_CLIENT_ID=your_client_id

# ----- Application Settings -----
# Environment: dev, staging, prod
APP_ENV=dev

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (never enable in production!)
DEBUG=false

# ----- Model Configuration -----
# Gemini model to use
GEMINI_MODEL=gemini-2.5-flash

# Maximum tokens for response
MAX_TOKENS=1024

# Temperature for classification (lower = more deterministic)
CLASSIFICATION_TEMPERATURE=0.1

# ----- Feature Flags -----
# Enable camera capture feature
ENABLE_CAMERA=true

# Enable analytics tracking
ENABLE_ANALYTICS=false

# Enable multi-language support
ENABLE_I18N=true

# ----- Rate Limiting -----
# Maximum requests per minute
RATE_LIMIT_PER_MINUTE=60

# Maximum image size in MB
MAX_IMAGE_SIZE_MB=10
